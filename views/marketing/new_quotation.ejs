                                    <label for="fix_price1">
                                        <i class="fa-solid fa-money-bill-wave"></i>
                                        Fix Price
                                    </label><br>
                                    <input type="number" name="fix_price1" id="fix_price1" autocomplete="off" class="form-control" required value="0">
                                </div>
                            </div>
                        </div><br>
                    </div><br>
