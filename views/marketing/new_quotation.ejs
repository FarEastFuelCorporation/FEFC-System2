                      <div>
                        <div class="signature" id="marketing_signature">
                          <img src="/images/<%= employeeSignature %>" alt="" />
                        </div>
                        <h3 id="marketing_user" class="bold">
                          <%= employeeName %>
                        </h3>
                      </div>
                      <div>
                        <h4>Marketing Staff / CSR</h4>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class="footer_header">
                      <h3>Checked By:</h3>
                    </div>
                    <div class="assignatory">
                      <div>
                        <div
                          class="signature"
                          id="accounting_head_signature"
                        ></div>
                        <h3 class="bold">Daisy Cardinez</h3>
                      </div>
                      <div>
                        <h4>Accounting Manager</h4>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class="footer_header">
                      <h3>Approved By:</h3>
                    </div>
                    <div class="assignatory">
                      <div>
                        <div
                          class="signature"
                          id="vice_president_signature"
                        ></div>
                        <h3 class="bold">Exequiel B. De Vera</h3>
                      </div>
                      <div>
                        <h4>Vice-President</h4>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class="footer_header">
                      <h3>Conformed By:</h3>
                    </div>
                    <div class="assignatory"></div>
